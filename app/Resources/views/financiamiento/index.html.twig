{% extends 'base.html.twig' %}

{% block body %}
    <h1>Financiamiento</h1>

    <table>
        <thead>
            <tr>
                <th>Bancoinstitucion</th>
                <th>Requevacas</th>
                <th>Requenovillas</th>
                <th>Fecha</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for financiamiento in financiamientos %}
            <tr>
                <td><a href="{{ path('financiamiento_show', { 'id': financiamiento.id }) }}">{{ financiamiento.bancoInstitucion }}</a></td>
                <td>{% if financiamiento.requeVacas %}Yes{% else %}No{% endif %}</td>
                <td>{% if financiamiento.requeNovillas %}Yes{% else %}No{% endif %}</td>
                <td>{% if financiamiento.fecha %}{{ financiamiento.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{{ financiamiento.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('financiamiento_show', { 'id': financiamiento.id }) }}">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('financiamiento_edit', { 'id': financiamiento.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('financiamiento_new') }}">Crear nueva entrada</a>
        </li>
    </ul>
{% endblock %}
