{% extends 'base.html.twig' %}

{% block body %}
    <h1>Destino</h1>

    <table>
        <thead>
            <tr>
                <th>Número autoconsumo</th>
                <th>Número de cría</th>
                <th>Número de levante</th>
                <th>Número de ceba</th>
                <th>Número reproducción</th>
                <th>Fecha</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destino in destinos %}
            <tr>
                <td><a href="{{ path('destino_show', { 'id': destino.id }) }}">{{ destino.numAutoconsumo }}</a></td>
                <td>{{ destino.numCria }}</td>
                <td>{{ destino.numLevante }}</td>
                <td>{{ destino.numCeba }}</td>
                <td>{{ destino.numReproduccion }}</td>
                <td>{% if destino.fecha %}{{ destino.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{{ destino.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('destino_show', { 'id': destino.id }) }}">Mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('destino_edit', { 'id': destino.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('destino_new') }}">Crear una nueva entrada</a>
        </li>
    </ul>
{% endblock %}
