{% extends 'base.html.twig' %}

{% block body %}
    <h1>Destino</h1>
<div class="page-container">
            <!-- BEGIN CONTENT -->
                    <div class="row">
                       <div class="col-xs-12 col-sm-12        col-md-12 col-lg-12 ">
                            <a class="btn btn-success" href="{{ path('destino_new') }}" ><span>Agregar</span></a>
                            <br><br>                            
                            <!-- BEGIN EXAMPLE TABLE PORTLET-->
                            <div class="portlet light bordered">
                                <div class="portlet-title">
                                    <div class="caption font-green">
                                        <i class="icon-settings font-green"></i>
                                        <span class="caption-subject bold uppercase"></span>
                                    </div>
                                    <div class="tools"> </div>
                                </div>
                                <div class="portlet-body">
                                    <table class="table table-striped table-bordered table-hover dt-responsive" width="100%" id="sample_2">
                                        <thead>
                                            <tr>
                                                <th class="all" width="10%">Detalle</th>
                                                <th class="all" width="10%">Editar</th>
                                                <th>Número autoconsumo</th>
                                                <th>Número de cría</th>
                                                <th>Número de levante</th>
                                                <th>Número de ceba</th>
                                                <th>Número reproducción</th>
                                                <th>Fecha</th>
                                                <th>Id</th>
                                                <th>Actions</th>
                                                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for destino in destinos %}
                                            <tr>
                                                <td>
                                                    <center>
                                                        <a href="{{ path('destino_show', { 'id': destino.id }) }}">
                                                            <i class="glyphicon glyphicon-search"></i>
                                                        </a>      
                                                    </center>
                                                </td>
                                                    <td>
                                                    <center>
                                                        <a href="{{ path('destino_edit', { 'id': destino.id }) }}">
                                                            <i class="glyphicon glyphicon-pencil"></i>
                                                        </a>      
                                                    </center>
                                                </td>
                                                
                                      <td><a href="{{ path('destino_show', { 'id': destino.id }) }}">{{ destino.numAutoconsumo }}</a></td>
                                      <td>{{ destino.numCria }}</td>
                                      <td>{{ destino.numLevante }}</td>
                                      <td>{{ destino.numCeba }}</td>
                                      <td>{{ destino.numReproduccion }}</td>
                                      <td>{% if destino.fecha %}{{ destino.fecha|date('Y-m-d') }}{% endif %}</td>
                                      <td>{{ destino.id }}</td>
                                      <td>
                                                    
                                            </tr>
                                        {% endfor %}
                                        </tbody>                                        
                                    </table>
                                </div>
                            </div>
                            <!-- END EXAMPLE TABLE PORTLET-->
                        </div>
                        
                    </div>
                                        

{% endblock %}
